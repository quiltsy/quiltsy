<div class="row">
	<div class="small-12 medium-6 columns">
		<h2><%= @fabric.name %></h2><br >

		<%= image_tag(@fabric.fabric_image.mobile_720) %>

	</div>

	<div class="small-12 medium-6 columns">
		<h4>Manufacturer: <%= link_to @fabric.manufacturer, manufacturer_path(@fabric) %></h4>
